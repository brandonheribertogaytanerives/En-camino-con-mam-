<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAC6E1"
    android:orientation="vertical"
    tools:context=".SegundoActivity">

    <Button
        android:id="@+id/button7"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:background="?attr/actionModeCloseDrawable"
        android:backgroundTint="#9B6BF2"
        android:onClick="onClick2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        app:srcCompat="@drawable/imagen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Calculemos tu edad gestacional "
            android:textAllCaps="false"
            android:textColor="#9B6BF2"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFeGesta"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_margin="10dp"
            android:background="@drawable/boton"
            android:onClick="onClick3"
            android:text="Fecha gestacional   "
            android:textAllCaps="false"
            android:textColor="#9B6BF2"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFeCon"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_margin="10dp"
            android:background="@drawable/boton"
            android:onClick="onClick4"
            android:text="Fecha de concepciÃ³n    "
            android:textAllCaps="false"
            android:textColor="#9B6BF2"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFePar"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_margin="10dp"
            android:background="@drawable/boton"
            android:onClick="onClickParto"
            android:text="Fecha del parto    "
            android:textAllCaps="false"
            android:textColor="#9B6BF2"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnNing"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_margin="10dp"
            android:background="@drawable/boton"
            android:onClick="onClickNinguna"
            android:text="Ninguna, Calcular  "
            android:textAllCaps="false"
            android:textColor="#9B6BF2"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>